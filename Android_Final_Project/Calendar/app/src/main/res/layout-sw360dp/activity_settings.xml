<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!--android:background="@drawable/bike1"-->


 <include layout="@layout/toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="18dp"
        android:layout_below="@+id/toolbar"
        >

        
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">




            <com.alexzh.circleimageview.CircleImageView
                android:id="@+id/banar1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/b"
               android:layout_marginTop="3dp"

                android:scaleType="centerCrop"
                android:layout_gravity="center"
                 />

            <ImageView

                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_plus_filled_100"
                android:layout_gravity="right"
                android:scaleType="centerCrop"

                />


        </FrameLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:scrollbars="none"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColorHint="@color/hintColor">

                    <com.rey.material.widget.EditText
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="FULL NAME"
                        android:textColorHint="#d3d3d3"
                        android:inputType="text"
                        android:textSize="14dp"
                        android:textColor="@color/textColor"
                        android:padding="12dp"
                        android:background="#00000000"



                        />
                    
                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/dividerColor"
                    ></LinearLayout>
                
                
                
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textColorHint="@color/hintColor"
                    android:layout_marginTop="4dp">

                    <com.rey.material.widget.EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email"
                        android:textColorHint="#d3d3d3"
                        android:inputType="textEmailAddress"
                        android:textSize="14dp"
                        android:padding="12dp"
                        android:textColor="@color/textColor"


                        android:background="#00000000"


                        />

                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/dividerColor"
                    android:layout_marginTop="4dp"
                    ></LinearLayout>



                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/hintColor"
                    android:layout_marginTop="4dp">


                    <com.rey.material.widget.EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="PASSWORD"
                        android:textColorHint="#d3d3d3"
                        android:inputType="textPassword"
                        android:textSize="14dp"
                        android:textColor="@color/textColor"
                        android:padding="16dp"


                        android:background="#00000000"


                        />

                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/dividerColor"></LinearLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/hintColor"
                    android:layout_marginTop="4dp">


                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/dividerColor"></LinearLayout>


                <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_marginTop="28dp">
              
              <com.rey.material.widget.TextView
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="wrap_content"
                  android:text="GENDER"
                  android:textColor="@color/hintColor"
                  android:layout_marginLeft="16dp"/>
              
              
              <RadioButton
                  android:id="@+id/radio1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Male"
                  android:textColor="@color/textColor"/>


                    <RadioButton
                        android:id="@+id/radio2"
                        android:layout_width="103dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="Female"
                        android:textColor="@color/textColor" />


          </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/dividerColor"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="26dp">

                    <com.rey.material.widget.TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Always Require Login"
                        android:layout_marginLeft="16dp"
                        android:layout_gravity="center"
                        android:textColor="@color/hintColor"/>


                    <com.rey.material.widget.Switch
                        style="@style/MaterialSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:checked="true"
                        android:layout_below="@+id/logo"
                        android:layout_centerHorizontal="true"

                        android:elevation="0dp"

                        android:id="@+id/switchMy"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="26dp"
                    android:orientation="horizontal">

                    <com.rey.material.widget.TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="1"
                        android:text="Alarms"
                        android:textColor="@color/hintColor" />


                    <com.rey.material.widget.Switch
                        android:id="@+id/alarmSwitch"
                        style="@style/MaterialSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/logo"
                        android:layout_centerHorizontal="true"
                        android:checked="true"

                        android:elevation="0dp"

                        android:gravity="center" />


                </LinearLayout>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>


</RelativeLayout>
